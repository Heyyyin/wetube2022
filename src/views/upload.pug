extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text",name="title",maxlength=80)
        input(placeholder="Description", required, name="description", maxlength=140)
        input(placeholder="Hashtags, separated by comma.", required, name="hashtags")
        input(type="submit", value="Upload Video") 