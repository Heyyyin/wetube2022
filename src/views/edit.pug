extends base.pug

block content 
    h4 Update Video
    form(method="POST")
        input(name="title",placeholder="Video Title",value=video.title,required)
        input(placeholder="Description", required, name="description", value=video.description, maxlength=140)
        input(placeholder="Hashtags, separated by comma.", required, value=video.hashtags.join(),name="hashtags")
        input(value="Save", type="submit")